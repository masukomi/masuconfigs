#!/usr/bin/env sh

# Usage: git branchdate
# Lists the date of the last commit of each branch

for branch in `git branch --no-color 2> /dev/null | sed -E 's/^.{2}//'`; do
	printf "%s %s " \
		$(git log $branch -n 1 --format="%Cgreen%ci%Creset" $branch ) \
		$branch \
		| sed -e "s/\n//" | sed -E "s/-[0-9]{4}/ /"
	echo ""
done
