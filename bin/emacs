#!/bin/bash
EMACS_VERSION=$(ls /usr/local/Cellar/ \
        | grep --color=never emacs-plus \
        | sort \
        | tail -n1  )
EMACS_SUB_VERSION=$( ls /usr/local/Cellar/$EMACS_VERSION \
        | sort \
        | tail -n1)
EMACS_INSTALL_LOCATION=$(echo "/usr/local/Cellar/$EMACS_VERSION/$EMACS_SUB_VERSION/Emacs.app/Contents/MacOS/Emacs" )

$EMACS_INSTALL_LOCATION "$@"
